{
  "name": "ts-index-generator",
  "version": "1.0.0-beta.1",
  "description": "Generate index.ts for your TypeScript project",
  "main": "index.js",
  "types": "index.d.ts",
  "author": "author",
  "license": "MIT",
  "keywords": [
    "typescript",
    "index",
    "generator"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/elclanrs/ts-index-generator.git"
  },
  "scripts": {
    "build": "rm -rf dist && tsc --incremental false",
    "lint": "eslint '{src,scripts}/**/*.{ts,js}'",
    "prepare": "npm run build && ./scripts/packageDist.js",
    "release": "standard-version --no-verify --release-as",
    "start": "npm run watch",
    "test": "ava -w",
    "test-single": "ava",
    "watch": "tsc -w"
  },
  "bin": {
    "ts-index-generator": "./cli.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.136",
    "@types/node": "^12.6.8",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "ava": "^2.2.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^3.0.1",
    "lodash": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "standard-version": "^8.0.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "commander": "^2.20.0",
    "glob": "^7.1.4",
    "lodash": "^4.17.15"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "test/**/*",
      "!test/**/index.ts",
      "!test/root"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "run-s lint test-single"
    }
  }
}
